<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/confluence.css" rel="stylesheet" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/thumbnail.js"></script>
    <script src="~/Scripts/injectModal.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("a.my-tool-tip").tooltip();
        });
        $(function () {
            $('.privacyTerms').popover({
                placement: 'top'
            });
            $('.tip').popover({
                placement: 'top',
                container: 'body'
            });
        });
    </script>

</head>
<body>
    <div class="navbar-wrapper ">
        <div id="topLogo" class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/co_oit_gis_cmyk.png" class="img-responsive" id="oitLogoBrand" style="width:100%;" />
                </a>
                <div id="mobileTitlePic">
                    <div id="mobileTitleTxt"> <img class="img-responsive" src="~/Content/images/bannerLogo.png" /></div>
                </div>
                <div id="titlePic" class="text-fluid">
                    <img class="img-responsive" src="~/Content/images/bannerLogo.png" />
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="~/Content/images/storyMapCRRO.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Interactive Story Map</h1>
                        <p><b>NEW!</b>  A story map for the Colorado Resiliency & Recovery Office that illustrates advances made in recovery efforts since the historic flooding Colorado experienced in September of 2013.</p>
                        <p><a class="btn btn-lg btn-primary oit-green" href="http://maps.co.gov/cofloodrecovery/" role="button" style="box-shadow:2px 0px 8px 3px #333;">Learn more</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="~/Content/images/parcelMap.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Colorado Parcels Dataset</h1>
                        <p>See our aggregated dataset! Public data is available for download.</p>
                        <p><a class="btn btn-lg btn-primary oit-green" href="https://data.colorado.gov/Local-Aggregation/2016-Colorado-Parcels-Layer-Public-/izys-vycy" role="button" target="_blank" style="text-align:center;box-shadow:2px 0px 8px 3px #333;">Learn more</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="~/Content/images/bb_portal.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Colorado's Broadband Portal</h1>
                        <p>Learn more about OIT's broadband program.  Assisting communities in their broadband needs.</p>
                        <p><a class="btn btn-lg btn-primary oit-green" href="http://maps.co.gov/HTML5Viewer_2_5/?viewer=Map" role="button" target="_blank" style="box-shadow:2px 0px 8px 3px #333;">Visit</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="fourth-slide" src="~/Content/images/CIM.jpg" alt="Fourth slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Colorado Information Marketplace</h1>
                        <p>Learn more about the Colorado Information Marketplace and how you can use open data.</p>
                        <p><a class="btn btn-lg btn-primary oit-green" href="https://www.youtube.com/watch?v=wgURfpN4Ql8&feature=youtu.be" role="button" target="_blank" style="box-shadow:2px 0px 8px 3px #333;">See Video</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="color:#d0d2d3"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="color:#d0d2d3"></span>
            <span class="sr-only">Next</span>
        </a>
        
        <nav id="navbarInverse" class="navbar navbar-inverse navbar-static-top ">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarCollapse" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar icon-bar-oit-green"></span>
                <span class="icon-bar icon-bar-oit-green"></span>
                <span class="icon-bar icon-bar-oit-green"></span>
            </button>
            <!--Desktop right side navbar-->
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-text navbar-left">
                    <li class="CIM"><a href="https://data.colorado.gov/" class="CIM">Colorado Information Marketplace</a></li>
                </ul>
                <ul class="home nav navbar-nav navbar-right">
                    <li><a class="my-tool-tip" href="@Url.Action("Index", "About")" title="About Us" data-toggle="tooltip" data-placement="auto bottom"><span class="glyphicon glyphicon-user glyphicon-oit"></span></a></li>
                    <li><a class="my-tool-tip" href="#contactModal" title="Contact Us" data-toggle="modal" data-target="#contactModal" data-placement="auto bottom"><span class="glyphicon glyphicon-envelope glyphicon-oit" aria-hidden="true"></span></a></li>
                    <li><a class="my-tool-tip" href="#calendarModal" title="Team Calendar" data-toggle="modal" data-target="#calendarModal" data-placement="auto bottom"><span class="glyphicon glyphicon-calendar glyphicon-oit" aria-hidden="true"></span></a></li>
                    <li><a class="my-tool-tip" href="#requestModal" title="Request Service" data-toggle="modal" data-target="#requestModal" data-placement="auto bottom"><span class="glyphicon glyphicon-comment glyphicon-oit" aria-hidden="true"></span></a></li>
                </ul>
            </div>
            <!--Mobile right side navbar-->
            <div id="navbarCollapse" class="navbar-collapse collapse navbar-right switch-list-collapse">
                <ul class="home nav navbar-nav navbar-right switch-list-collapse">
                    <li><a href="https://data.colorado.gov/" class="collapse-text">Colorado Information Marketplace</a></li>
                    <li><a class="collapse-text" href="@Url.Action("Index", "About")" title="About Us" data-toggle="tooltip" data-placement="auto bottom"><span class="glyphicon glyphicon-user"></span> About-us</a></li>
                    <li><a class="collapse-text" href="#contactModal" title="Contact Us" data-toggle="modal" data-target="#contactModal" data-placement="auto bottom"><span class="glyphicon glyphicon-envelope"></span> Contact</a></li>
                    <li><a class="collapse-text" href="#calendarModal" title="Team Calendar" data-toggle="modal" data-target="#calendarModal" data-placement="auto bottom"><span class="glyphicon glyphicon-calendar"></span> Calendar</a></li>
                    <li><a class="collapse-text" href="#requestModal" title="Request Service" data-toggle="modal" data-target="#requestModal" data-placement="auto bottom"><span class="glyphicon glyphicon-comment" ></span> Request Service</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("_RequestModal")
            </div>
        </div>
    </div>
    <div class="modal fade" id="calendarModal" tabindex="-1" role="dialog" aria-labelledby="requestLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("_CalendarModal")
            </div>
        </div>
    </div>
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="requestLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("_ContactModal")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Governor's Office of Information Technology | 601 E. 18th Ave., Suite 250, Denver, CO 80203 | 303.764.7700 | oit@state.co.us</p>
            <p>&copy; @DateTime.Now.Year - GCDP</p>
        </footer>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.4/holder.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</body>
</html>